<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemCardView"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="12dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFD1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/itemImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:padding="16dp"
            android:src="@drawable/baseline_image_24" />

        <TextView
            android:id="@+id/itemTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Title"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button_editHungerAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#1FC39E"
            android:gravity="center"
            android:text="@string/button_editHunger01"/>

        <Button
            android:id="@+id/button_deleteHungerAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#1FC39E"
            android:gravity="center"
            android:text="@string/button_deleteHunger01" />

    </LinearLayout>

</androidx.cardview.widget.CardView>